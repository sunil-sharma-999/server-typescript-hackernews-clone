generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("HEROKU_POSTGRESQL_BLACK_URL") 
}

model Link {
  id          Int      @id @unique @default(autoincrement())
  url         String
  description String
  createdAt   DateTime @default(now())
  postedBy    User?    @relation(name: "PostedBy", fields: [postedById], references: [id])
  postedById  Int
  voters      User[]   @relation(name: "Votes")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  links    Link[] @relation(name: "PostedBy")
  votes    Link[] @relation(name: "Votes")

}
